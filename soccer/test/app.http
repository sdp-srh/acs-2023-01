
# gcloud server
# @server = https://acs-2023-01.ey.r.appspot.com/

# local server
@server = http://localhost:3000

# identifier for a new match
@newmatchid = 2f648c72-45ac-4be0-a259-12340f3472f1


### test the app locally 
GET http://localhost:3000/


### test the app locally 
GET https://acs-2023-01.ey.r.appspot.com/

### test the app
GET {{server}}/

### read all teams
GET {{server}}/team

### read a specific team
GET {{server}}/team/25ae03be-8b74-4443-9b3c-71737566c567

### read all matches
GET {{server}}/match

### read specific match by id
GET {{server}}/match/{{newmatchid}}

### read specific match wit a result
GET {{server}}/match/30def128-0089-4272-96f3-e80f5e3c6379

### read specific match without a result
GET {{server}}/match/3858c2d0-eba3-4cab-822b-722c123b2fe4

### create a new match
POST {{server}}/match
Content-Type: application/json

  {
    "id": "{{newmatchid}}",
    "startDate": "2023-03-01",
    "matchDay": 15,
    "team1": "d389b8d3-254a-4925-8fb5-667520035eaf",
    "team2": "9a664089-2e4b-4c56-af71-5b96d2c9d187",
    "finished": false,
    "goals1": -1,
    "goals2": -1
  }



### UPDATE match with a new data
PATCH {{server}}/match/{{newmatchid}}
Content-Type: application/json

  {
    "startDate": "2023-04-01"
  }

### add a result to a match
PUT {{server}}/addresult
Content-Type: application/json

  {
    "id": "{{newmatchid}}",
    "goals1": 8,
    "goals2": 7
  }

### delete match with id
DELETE {{server}}/match/{{newmatchid}}


### options of match endpoint
OPTIONS {{server}}/match/

### read specific match wit a result
GET {{server}}/tts/match/30def128-0089-4272-96f3-e80f5e3c6379

### read specific match without a result
GET {{server}}/tts/match/3858c2d0-eba3-4cab-822b-722c123b2fe4

